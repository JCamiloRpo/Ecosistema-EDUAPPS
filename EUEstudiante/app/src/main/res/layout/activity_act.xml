<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:card_view="http://schemas.and"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="175dp"
        android:fontFamily="sans-serif-medium"
        android:text="ACTIVIDADES DE LA SESIÓN DE CLASE"
        android:textColor="#023e7d"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_log"
        android:layout_width="241dp"
        android:layout_height="124dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_Eduapps" />


    <androidx.cardview.widget.CardView
        android:layout_width="374dp"
        android:layout_height="189dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="21dp"
        app:cardBackgroundColor="#0353a4"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="356dp"
            android:layout_height="161dp"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_actividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Actividad 1"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="22dp"
                tools:layout_conversion_absoluteWidth="98dp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="224dp" />


            <TextView
                android:id="@+id/text_contenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Resuelve el siguiente text y tómale el pantallazo al resultado o anota el nivel en el que quedaste."
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="22dp"
                tools:layout_conversion_absoluteWidth="98dp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="224dp" />


            <TextView
                android:id="@+id/text_tiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Tiempo: 15 minutos"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="22dp"
                tools:layout_conversion_absoluteWidth="98dp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="224dp" />

            <TextView
                android:id="@+id/text_recurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Recurso: 1 vídeo"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="22dp"
                tools:layout_conversion_absoluteWidth="98dp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="224dp" />

            <ImageView
                android:id="@+id/image_descarga"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_upload"
                tools:layout_editor_absoluteX="141dp"
                tools:layout_editor_absoluteY="463dp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>